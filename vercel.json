{
  "version": 2,
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/s/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/p/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/pixel/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/t/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/q/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/validate",
      "dest": "api/index.py"
    },
    {
      "src": "/route",
      "dest": "api/index.py"
    },
    {
      "src": "/track/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret_key",
    "DATABASE_URL": "@database_url",
    "SHORTIO_API_KEY": "@shortio_api_key",
    "SHORTIO_DOMAIN": "@shortio_domain"
  }
}
